{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="container text-center">
    <div class="row project-card">
        <!-- Card Projects -->
        {% for project in projects %}
        <div class="col-md-6 col-md-offset-3 mt-4">
            <div class="card">
                <div class="card-image">
                    <img class="img-responsive" style="width: 26rem;" src="{{ project.img[0].url }}" alt="Mon projet {{project.name}}">
                    <h5 class="card-title mb-3">{{ project.name }}</h5>
                </div>
                <div class="card-content">
                    <p>{{ project.description }}</p>
                </div>
                <hr />
                
                <div class="card-action">
                    <div class="container-tech">
                        <p class="tech"><span class="text-color-two">T</span>ECHNOLOGIES :</p>
                        {% for i in 0..project.techno|length-1 %}
                        <p class="icon-tech">{{project.techno[i].imgUrl|raw}}</p>
                        {% endfor %}
                    </div>
                    <div class="modal-footer">
                        <a class="link-bottom" href="{{project.url}}" target="_blank"><i class="fas fa-globe fa-3x"></i></a>
                        <a class="link-bottom" href="{{project.repositoryGit}}" target="_blank"><i class="fab fa-github-alt fa-3x"></i></a>
                        <!--<a href="">Maquette</a>-->
                    </div>
                </div>
            </div>
            <div class="mt-4 arrow-next">
                <button data-toggle="modal" data-target="#squarespaceModal-{{project.id}}" class="bubbly-button">En savoir <i class="fas fa-plus-circle"></i></button>
			</div>

			

		
        </div>
        {% endfor %}
    </div>
</div>
